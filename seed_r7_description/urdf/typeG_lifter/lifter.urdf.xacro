<?xml version="1.0"?>

<!-- XML namespaces -->
<robot name="lifter" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find seed_r7_description)/urdf/gazebo.xacro" />

  <xacro:macro name="lifter" params="base_link">
  <!-- ============================   (typeG_lifter)   ============================ -->
    <link name="${base_link}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/lifter_base_link.dae" scale="1 1 1" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/lifter_base_link.dae" scale="1 1 1" />
        </geometry>
      </collision>
      <inertial>
        <mass value="7.64604" />
        <origin xyz="-0.012819 -0.002679 0.007207" rpy="0 -0 0"/>
        <inertia ixx="0.0658136" ixy="-0.000159462" ixz="0.010103" iyy="0.0504268" iyz="0.000173435" izz="0.0889772"/>
      </inertial>
    </link>
    <xacro:gazebo_link_reference link_name="${base_link}" />

    <link name="leg_shank_link">
      <visual>
        <origin xyz="0.0 0.0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_shank_link.dae" scale="1 1 1" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_shank_link.dae" scale="1 1 1" />
        </geometry>
      </collision>
      <inertial>
        <mass value="2.06679" />
        <origin xyz="0.051713 0.0 0.146934" rpy="0 -0 0"/>
        <inertia ixx="0.06" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.06"/>
      </inertial>
    </link>
    <xacro:gazebo_link_reference link_name="leg_shank_link" />

    <link name="leg_knee_link">
      <visual>
        <origin xyz="0.0 0.0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_knee_link.dae" scale="1 1 1" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_knee_link.dae" scale="1 1 1" />
        </geometry>
      </collision>
      <inertial>
        <mass value="2.06679" />
        <origin xyz="-0.031713 0.0 0.046934" rpy="0 -0 0"/>
        <inertia ixx="0.06" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.06"/>
      </inertial>
    </link>
    <xacro:gazebo_link_reference link_name="leg_knee_link" />

    <link name="leg_thigh_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_thigh_link.dae" scale="1 1 1" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_thigh_link.dae" scale="1 1 1" />
        </geometry>
      </collision>
      <inertial>
        <mass value="2.62321" />
        <origin xyz="-0.0587169 0 0.135292" rpy="0 -0 0"/>
        <inertia ixx="0.0161595" ixy="-9.27234e-05" ixz="0.00262839" iyy="0.0166415" iyz="-0.00017447" izz="0.00477281"/>
      </inertial>
    </link>
    <xacro:gazebo_link_reference link_name="leg_thigh_link" />

    <link name="leg_base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_base_link.dae" scale="1 1 1" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_base_link.dae" scale="1 1 1" />
        </geometry>
      </collision>
      <inertial>
        <mass value="7.64604" />
        <origin xyz="-0.012819 -0.002679 0.007207" rpy="0 -0 0"/>
        <inertia ixx="0.0658136" ixy="-0.000159462" ixz="0.010103" iyy="0.0504268" iyz="0.000173435" izz="0.0889772"/>
      </inertial>
    </link>
    <xacro:gazebo_link_reference link_name="leg_base_link" />

    <link name="lifter_top_link"/>
    <xacro:gazebo_link_reference link_name="lifter_top_link" />

    <joint name="lifter_top_connector" type="fixed">
      <parent link="leg_base_link"/>
      <child  link="lifter_top_link"/>
      <origin xyz="0.012 0 0.040" rpy="0 0 0"/>
    </joint>

    <joint name="knee_joint" type="revolute"> <!-- rename "knee_joint_thigh_dummy" -->
      <parent link="leg_knee_link"/>
      <child  link="leg_thigh_link"/>
      <origin xyz="0 0 0.12" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit effort="200" lower="-1.2" upper="0" velocity="0.5"/>
      <dynamics damping="0.2" friction="0" />
    </joint>
    <xacro:gazebo_transmission joint_name="knee_joint" />

    <joint name="ankle_joint" type="revolute">
      <parent link="${base_link}"/>
      <child  link="leg_shank_link"/>
      <origin xyz="-0.012 0 0.035" rpy="0 0 0"/>
      <axis   xyz="0 -1 0"/>
      <limit effort="200" lower="0" upper="1.2" velocity="0.5" />
      <dynamics damping="0.2" friction="0" />
    </joint>
    <xacro:gazebo_transmission joint_name="ankle_joint" />

<!--- mimic joints -->
<!-- requried -->
    <joint name="knee_joint_mimic" type="continuous">
      <parent link="leg_thigh_link"/>
      <child link="leg_base_link"/>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <axis   xyz="0 -1 0"/>
      <mimic joint="knee_joint" multiplier="-1" offset="0"/>
    </joint>

    <joint name="ankle_joint_mimic" type="continuous">
      <parent link="leg_shank_link"/>
      <child  link="leg_knee_link"/>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <axis   xyz="0 -1 0"/>
      <mimic joint="ankle_joint" multiplier="-1" offset="0" />
    </joint>

<!-- redundant -->
    <link name="leg_shank_link_dummy">
      <visual>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_shank_link_dummy.dae" scale="1 1 1" />
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </visual>
      <inertial> <!-- for gazebo visualization -->
        <mass value="0.4"/>
        <origin rpy="0 0 0" xyz="-0.04 0.0 0.14"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>
    <link name="leg_thigh_link_dummy">
      <visual>
        <geometry>
          <mesh filename="package://seed_r7_description/meshes/typeG_lifter/leg_thigh_link_dummy.dae" scale="1 1 1" />
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </visual>
      <inertial> <!-- for gazebo visualization -->
        <mass value="0.4"/>
        <origin rpy="0 0 0" xyz="-0.04 0.0 0.14"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>

    <joint name="ankle_joint_dummy" type="continuous">
      <parent link="${base_link}"/>
      <child link="leg_shank_link_dummy"/>
      <origin xyz="0.01982 0 0.06682" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <mimic joint="ankle_joint" multiplier="1" offset="0" />
    </joint>
    <joint name="knee_joint_dummy" type="continuous">
      <parent link="leg_knee_link"/>
      <child link="leg_thigh_link_dummy"/>
      <origin xyz="0.03182 0 0.08818" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <mimic joint="knee_joint" multiplier="-1" offset="0" />
    </joint>

  </xacro:macro>

</robot>
